{
	"name": "@makay/rpc",
	"version": "0.4.0",
	"description": "An RPC library for quick development of seamless full-stack applications.",
	"keywords": [
		"typescript",
		"rpc",
		"sse",
		"server-sent-events",
		"real-time",
		"subscriptions"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Makay11/rpc.git"
	},
	"license": "MPL-2.0",
	"author": "Diogo Pais",
	"type": "module",
	"exports": {
		"./client": {
			"types": "./dist/client.d.ts",
			"import": "./dist/client.js"
		},
		"./hono": {
			"types": "./dist/hono.d.ts",
			"import": "./dist/hono.js"
		},
		"./result": {
			"types": "./dist/result.d.ts",
			"import": "./dist/result.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"import": "./dist/vite.js"
		},
		"./zod": {
			"types": "./dist/zod.d.ts",
			"import": "./dist/zod.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsc -p tsconfig.lib.json --watch",
		"validate": "pnpm lint && knip && pnpm format:check",
		"lint": "eslint --max-warnings=0",
		"lint:fix": "pnpm lint --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "rm -rf dist/* && tsc -p tsconfig.lib.json",
		"postbuild": "pnpm validate && publint",
		"prepublish": "pnpm build"
	},
	"dependencies": {
		"eventsource-parser": "^3.0.0",
		"tinyglobby": "^0.2.10",
		"type-fest": "^4.30.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@stylistic/eslint-plugin": "^2.12.1",
		"@tsconfig/node22": "^22.0.0",
		"@tsconfig/strictest": "^2.0.5",
		"@types/node": "^22.10.2",
		"eslint": "^9.17.0",
		"eslint-import-resolver-typescript": "^3.7.0",
		"eslint-plugin-command": "^0.2.7",
		"eslint-plugin-depend": "^0.12.0",
		"eslint-plugin-import-x": "^4.6.1",
		"eslint-plugin-n": "^17.15.1",
		"eslint-plugin-package-json": "^0.18.0",
		"eslint-plugin-regexp": "^2.7.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"knip": "^5.41.1",
		"prettier": "^3.4.2",
		"publint": "^0.2.12",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.18.1"
	},
	"peerDependencies": {
		"hono": "^4.6.14",
		"vite": "^6.0.3",
		"zod": "^3.24.1"
	},
	"peerDependenciesMeta": {
		"hono": {
			"optional": true
		},
		"zod": {
			"optional": true
		}
	},
	"packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf",
	"engines": {
		"node": ">=22"
	},
	"pnpm": {
		"overrides": {
			"is-core-module": "npm:@nolyfill/is-core-module@^1"
		}
	}
}
