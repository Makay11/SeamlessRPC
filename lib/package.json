{
	"name": "seamlessrpc",
	"version": "1.0.2",
	"description": "An RPC library for quick development of seamless full-stack applications.",
	"keywords": [
		"vite",
		"typescript",
		"rpc",
		"subscriptions",
		"sse",
		"server-sent-events",
		"real-time"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Makay11/SeamlessRPC.git"
	},
	"license": "MPL-2.0",
	"author": "Diogo Pais",
	"type": "module",
	"exports": {
		"./client": {
			"types": "./dist/client.d.ts",
			"import": "./dist/client.js"
		},
		"./hono": {
			"types": "./dist/hono.d.ts",
			"import": "./dist/hono.js"
		},
		"./result": {
			"types": "./dist/result.d.ts",
			"import": "./dist/result.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"import": "./dist/vite.js"
		},
		"./vue": {
			"types": "./dist/vue.d.ts",
			"import": "./dist/vue.js"
		},
		"./zod": {
			"types": "./dist/zod.d.ts",
			"import": "./dist/zod.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsc -p tsconfig.lib.json --watch",
		"validate": "pnpm type-check && pnpm lint && pnpm test && knip && pnpm format:check",
		"type-check": "tsc -p tsconfig.test.json",
		"type-check:watch": "pnpm type-check --watch",
		"lint": "eslint --max-warnings=0",
		"lint:fix": "pnpm lint --fix",
		"test": "node --test --experimental-test-coverage --experimental-test-module-mocks --experimental-strip-types --disable-warning=ExperimentalWarning",
		"test:watch": "node --test --watch --experimental-test-module-mocks --experimental-strip-types --disable-warning=ExperimentalWarning",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "rm -rf dist/* && tsc -p tsconfig.lib.json",
		"postbuild": "pnpm validate && publint",
		"prepublish": "pnpm build"
	},
	"dependencies": {
		"eventsource-parser": "^3.0.2",
		"tinyglobby": "^0.2.14",
		"type-fest": "^4.41.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@stylistic/eslint-plugin": "^4.4.1",
		"@tsconfig/node22": "^22.0.2",
		"@tsconfig/strictest": "^2.0.5",
		"@types/node": "^22.15.32",
		"eslint": "^9.29.0",
		"eslint-import-resolver-typescript": "^4.4.3",
		"eslint-plugin-command": "^3.3.0",
		"eslint-plugin-depend": "^1.2.0",
		"eslint-plugin-import-x": "^4.15.2",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-n": "^17.20.0",
		"eslint-plugin-package-json": "^0.40.4",
		"eslint-plugin-regexp": "^2.9.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"hono": "^4.8.1",
		"knip": "^5.61.2",
		"prettier": "^3.5.3",
		"publint": "^0.3.12",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.34.1",
		"vite": "^6.3.5",
		"vue": "^3.5.17",
		"zod": "^3.25.67"
	},
	"peerDependencies": {
		"hono": "^4.8.1",
		"vite": "^6.3.5",
		"vue": "^3.5.17",
		"zod": "^3.25.67"
	},
	"peerDependenciesMeta": {
		"hono": {
			"optional": true
		},
		"vue": {
			"optional": true
		},
		"zod": {
			"optional": true
		}
	},
	"packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
	"engines": {
		"node": ">=22"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"unrs-resolver"
		],
		"overrides": {
			"is-core-module": "npm:@nolyfill/is-core-module@^1"
		}
	}
}
