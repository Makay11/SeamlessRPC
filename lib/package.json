{
	"name": "@makay/rpc",
	"version": "0.4.0",
	"description": "An RPC library for quick development of seamless full-stack applications.",
	"keywords": [
		"typescript",
		"rpc",
		"sse",
		"server-sent-events",
		"real-time",
		"subscriptions"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Makay11/rpc.git"
	},
	"license": "MPL-2.0",
	"author": "Diogo Pais",
	"type": "module",
	"exports": {
		"./client": {
			"types": "./dist/client.d.ts",
			"import": "./dist/client.js"
		},
		"./hono": {
			"types": "./dist/hono.d.ts",
			"import": "./dist/hono.js"
		},
		"./result": {
			"types": "./dist/result.d.ts",
			"import": "./dist/result.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"import": "./dist/vite.js"
		},
		"./zod": {
			"types": "./dist/zod.d.ts",
			"import": "./dist/zod.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsc -p tsconfig.lib.json --watch",
		"validate": "pnpm lint && knip && pnpm format:check",
		"lint": "eslint --max-warnings=0",
		"lint:fix": "pnpm lint --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "rm -rf dist/* && tsc -p tsconfig.lib.json",
		"postbuild": "pnpm validate && publint",
		"prepublish": "pnpm build"
	},
	"dependencies": {
		"eventsource-parser": "^3.0.0",
		"tinyglobby": "^0.2.10",
		"type-fest": "^4.30.1"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^3.12.0",
		"@tsconfig/node22": "^22.0.0",
		"@tsconfig/strictest": "^2.0.5",
		"@types/node": "^22.10.2",
		"eslint": "^9.16.0",
		"eslint-plugin-package-json": "^0.18.0",
		"knip": "^5.41.0",
		"prettier": "^3.4.2",
		"publint": "^0.2.12",
		"typescript": "~5.7.2"
	},
	"peerDependencies": {
		"hono": "^4.6.14",
		"vite": "^6.0.3",
		"zod": "^3.24.1"
	},
	"peerDependenciesMeta": {
		"hono": {
			"optional": true
		},
		"zod": {
			"optional": true
		}
	},
	"packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
	"pnpm": {
		"overrides": {
			"is-core-module": "npm:@nolyfill/is-core-module@^1"
		}
	}
}
