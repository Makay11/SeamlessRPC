{
	"name": "@makay/rpc",
	"version": "0.4.0",
	"type": "module",
	"description": "An RPC library for quick development of seamless full-stack applications.",
	"keywords": [
		"typescript",
		"rpc",
		"sse",
		"server-sent-events",
		"real-time",
		"subscriptions"
	],
	"license": "MPL-2.0",
	"author": "Diogo Pais",
	"repository": "github:Makay11/rpc",
	"packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
	"scripts": {
		"dev": "tsc -p tsconfig.lib.json --watch",
		"lint": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --max-warnings 0",
		"lint:fix": "pnpm lint --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prebuild": "pnpm lint && pnpm format:check",
		"build": "rm -rf dist/* && tsc -p tsconfig.lib.json",
		"postbuild": "publint",
		"prepublish": "pnpm build"
	},
	"files": [
		"dist"
	],
	"exports": {
		"./client": {
			"types": "./dist/client.d.ts",
			"import": "./dist/client.js"
		},
		"./hono": {
			"types": "./dist/hono.d.ts",
			"import": "./dist/hono.js"
		},
		"./result": {
			"types": "./dist/result.d.ts",
			"import": "./dist/result.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"import": "./dist/server.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"import": "./dist/vite.js"
		},
		"./zod": {
			"types": "./dist/zod.d.ts",
			"import": "./dist/zod.js"
		}
	},
	"dependencies": {
		"eventsource-parser": "^3.0.0",
		"glob": "^11.0.0",
		"hono": "^4.6.14",
		"type-fest": "^4.30.1",
		"vite": "^6.0.3",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.0",
		"@tsconfig/strictest": "^2.0.5",
		"@types/node": "^22.10.2",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.18.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"prettier": "^3.4.2",
		"publint": "^0.2.12",
		"typescript": "~5.7.2"
	}
}
